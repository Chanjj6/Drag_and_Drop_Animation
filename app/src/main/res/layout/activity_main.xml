<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/crosswalk"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/figure"
                android:layout_width="56dp"
                android:layout_height="98dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.669" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="50dp">

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#BCC"
            android:padding="10dp">

            <Button
                android:id="@+id/up_move_Btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_upward"
                android:tag="UP" />

            <Button
                android:id="@+id/down_move_Btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_downward"
                android:tag="DOWN" />

            <Button
                android:id="@+id/forward_move_Btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_forward"
                android:tag="FORWARD" />

            <Button
                android:id="@+id/back_move_Btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_back"
                android:tag="BACK" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:background="@color/ash_gray">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"

                android:background="@drawable/ic_play_circle_filled"
                android:textSize="10sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#BBB"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/holder01"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/rec" />

            <ImageView
                android:id="@+id/holder02"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/rec" />

            <ImageView
                android:id="@+id/holder03"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/rec" />

            <ImageView
                android:id="@+id/holder04"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/rec" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>